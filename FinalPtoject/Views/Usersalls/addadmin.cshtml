
@model FinalPtoject.Models.Usersall

@{
    ViewData["Title"] = "addadmin";
}

<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        background-image: url('images/bkgr2.jpeg');
        background-size: cover;
        background-position: center;
    }

    .row {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 500px;
        transform: translate(-50%, -50%);
        background-color: #413d366c;
        padding: 10px;
        border-radius: 5px;
    }

    h1 {
        text-align: center;
        margin-bottom: 5px;
        color: black;
    }

    h2 {
        text-align: center;
        margin-bottom: 5px;
        color: black;
    }

    p {
        margin-bottom: 5px;
        font-weight: bold;
        color: black;
        text-align: center;
    }


    label {
        margin-bottom: 5px;
        font-weight: bold;
        color: black;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #f2f2f2;
    }

</style>


<body>

    <div class="row">

        <form asp-action="addadmin">

            <h2>Add Admin</h2>

            <label id="lb1">Username:</label>
            <input id="uname" type="text" name="name" placeholder="Enter a username" required>

            <label id="lb2" for="password">Password:</label>
            <input id="upass" type="password" name="password" placeholder="Enter a password" required>


            <label id="lb3" for="confirm-password">Confirm Password:</label>
            <input type="password" id="confirm-password" name="confirm-password" placeholder="Re-enter your password" required>
             <p style="color:red">@ViewData["message"]</p>
            <center> <button class="btn btn-success" type="submit" id="submit-btn">Add Admin</button> </center>
            
        </form>

    </div>

    <script>
        document.getElementById("submit-btn").onsubmit = function () {
            var UserName_S = document.getElementById("uname").value;
            var password_S = document.getElementById("upass").value;


        };

        document.getElementById("submit-btn").onclick = function () {
            var pass = document.getElementById("upass").value;
            var pass1 = document.getElementById("confirm-password").value;

            var label = document.getElementById("lb1");
            var label1 = document.getElementById("lb2");
            var label2 = document.getElementById("lb3");

            if (pass != pass1) {
                alert("Password dose not match");
                label1.style.color = "red";
                label2.style.color = "red";
                event.preventDefault();
            }

        };
    </script>
</body>