


<h1>Send Email</h1>
<hr />
<body>
    <form asp-action="email">
        <div class="form-group">
            <label class="control-label">Customer Email Adress</label>
            <input name="address" class="form-control" placeholder="Enter the customer email" /> <br />
        </div>
        <div class="form-group">
            <label for="subject" class="control-label">Message</label>
        </div>
        <div class="form-group">
            <textarea name="subject" rows="4" cols="60"> </textarea>
        </div>
      <button class="btn btn-success" type="submit">Send Email</button>
        <p> @ViewData["message"]</p>  
    </form>
            </body>