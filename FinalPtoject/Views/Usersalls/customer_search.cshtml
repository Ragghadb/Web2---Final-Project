@model FinalPtoject.Models.Usersall

@{
    ViewData["Title"] = "customer_search";
}


<h1>search</h1>

<form asp-action="customer_search">
    <div class="form-group">
    </div>  <label class="control-label"> Role </label>
    <select class="form-control" name="cata" id="ca" onchange="gettitle()">
        <option value="sele">Please select</option>
        <option value="admin">Admin</option>
        <option value="customer">Customer</option>
    </select>

    <div>
        <div class="form-group">
            <label class="control-label"> Name </label>
            <select class="form-control" name="tit" id="ti"> </select>
        </div>
        <input type="submit" value="Show" class="btn btn-default" />

    </div>
</form>


<script>
    async function gettitle() {
        var cc = document.getElementById('ca').value;
        var response = await fetch('/getnameAPI/' + cc);
        let x = await response.json();
        var dd = "<option> Please select</option>";
        for (i = 0; i < x.length; i++) {
            dd += "<option>" + x[i].name + "</option>";
        }
        document.getElementById("ti").innerHTML = dd;
    }

</script>



