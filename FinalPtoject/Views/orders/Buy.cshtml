@model FinalPtoject.Models.items
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@{
    ViewData["Title"] = "Buy";
}
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<h1>buy</h1>
<dl class="row">
    <dt class="col-sm-2">title </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.name)
    </dd>
    <dt class="col-sm-2"> description</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.descr)
    </dd>
    <dt class="col-sm-2">price </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.price)
    </dd>
    <dt class="col-sm-2">discount </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.discount)
    </dd>
    <dt class="col-sm-2">category</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.category)
    </dd>
    <dt> product image</dt>
    <dd>
        <img src="~/images/@Model.imagefilename" height="150" />
        <br />@Model.imagefilename
    </dd>
    <dt class="col-sm-2">quantity</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.quantity)
    </dd>
</dl>
<p style="color:red"> @ViewData["message"]</p>
<form asp-action="buy">
    <input type="hidden" name="itemid" value=@Model.Id />
    <div class="form-group">
        <label for="quantity" class="control-label">Quantity</label>
        <input onchange="gettotal()" name="quantity" class="form-control" id="qu" />

    </div>
    <div class="alert alert-success" id="tot"> </div>

    <input type="submit" value="Buy" class="btn btn-primary" />
</form>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section scripts {
    <script type="text/javascript">
        function gettotal() {
            tot = 0;

            var q = document.getElementById('qu').value;
            var pr = '@Model.price';
            tot = q * pr;
            if ('@Model.discount' == "yes") {
                tot = (tot * 90) / 100
            }
            Swal.fire({ icon: 'success', title: "total  =" + tot, showConfirmButton: false, timer: 2500 })
            var msg = "you need to pay " + tot
            ducoment.getElementById('tot').innerHtml = msg;
        }
    </script>
}