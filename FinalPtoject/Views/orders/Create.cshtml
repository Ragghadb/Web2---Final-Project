    </dd>
</dl>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<p style="color:red"> @ViewData["message"]</p>

<form asp-action="Create  enctype="multipart/form-data" method="post">
    <input type="hidden" name="itemid" value="@Model.Id" />

    <div class="form-group">
        <label for="quantity" class="control-label">Quantity</label>
        <input name="quantity" class="form-control" id="qu" onchange="gettotal()" />
    </div>

    <div class='alert alert-success' id="tot"> </div>

    <input type="submit" value="Buy" class="btn btn-primary" />
</form>

@section scripts {
    <script>
        function gettotal() {
            var tot = 0;
            var q = parseFloat(document.getElementById('qu').value);
            var pr = @Html.Raw(Json.Serialize(Model.price));
            
            tot = q * pr;
            
            if ('@Model.discount' === "yes") {
                tot = (tot * 90) / 100;
            }

            Swal.fire({ icon: 'success', title: "total  =" + tot, showConfirmButton: false, timer: 2500 });
        }
    </script>
}
